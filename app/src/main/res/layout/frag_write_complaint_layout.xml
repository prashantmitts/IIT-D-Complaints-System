<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title*"
            android:id="@+id/titleText"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="9dp"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#333333"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tit"
            android:layout_below="@+id/titleText"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:textCursorDrawable="@null"
            android:textColor="#000000"
            android:layout_centerHorizontal="true"
            android:inputType="textNoSuggestions"
            android:background="@drawable/edittext_bg"
            android:singleLine="true">
        </EditText>

        <com.example.dhairya.complaintsystem.NoDefaultSpinner
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/tit"
            android:layout_marginTop="12dp"
            android:id="@+id/level"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/category"
            android:prompt="@string/level"
            android:textAlignment="viewStart"
            />

        <com.example.dhairya.complaintsystem.NoDefaultSpinner
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/level"
            android:layout_marginTop="12dp"
            android:id="@+id/type"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/category"
            android:prompt="@string/type"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description*"
            android:id="@+id/descriptionText"
            android:layout_below="@+id/type"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="10dp"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#333333"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:id="@+id/des"
            android:layout_below="@+id/descriptionText"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="10dp"
            android:layout_centerHorizontal="true"
            android:gravity="top"
            android:textSize="16sp"
            android:textCursorDrawable="@null"
            android:textColor="#000000"
            android:inputType="textNoSuggestions|textMultiLine|textCapSentences"
            android:background="@drawable/edittext_bg"
            android:singleLine="false">
        </EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tags"
            android:id="@+id/tagsText"
            android:layout_below="@+id/des"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="10dp"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#333333"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/tagsEdit"
            android:layout_below="@+id/tagsText"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="10dp"
            android:layout_centerHorizontal="true"
            android:gravity="top"
            android:textSize="16sp"
            android:textCursorDrawable="@null"
            android:text="#"
            android:textColor="#000000"
            android:inputType="textNoSuggestions|textMultiLine|textCapSentences"
            android:background="@drawable/edittext_bg"
            android:singleLine="false"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*mandatory fields"
            android:id="@+id/asterisk"
            android:layout_below="@+id/tagsEdit"
            android:layout_marginTop="30dp"
            android:textSize="12sp"
            android:textColor="#000000"
            />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:id="@+id/writeComplaint"
            android:background="@drawable/button_bg"
            android:layout_below="@+id/asterisk"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:textSize="17sp"/>
    </RelativeLayout>
</ScrollView>